<div id="gcw" class="screen py-5">
  <div class="p-5">
    <h1 class="text-center">{{'main_h1' | trans }}</h1>
    <h3 class="text-center mt-4 mb-4">{{'main_h2' | trans}}</h3>
  </div>


    <div class=" text-center">

      <div class="d-inline-block align-middle mr-4 mb-5 my-md-3" id="gcw-video">
        <a id="btn-play" href="#">{{'main_btn_play' | trans}}</a>
        {% for i in ['gocoworker','gocompany','gocobooster','gococampus'] %}
          <div class="gcw-ico gcw-ico-{{i}} fadeIO" id="gcw-ico-g-{{i}}"><img src="{{asset('build/static/home/ecosystem/'~i~'.svg')}}" alt="{{i}}" class="img-fluid"/></div>
          <div class="gcw-ico gcw-ico-{{i}} fadeIO" id="gcw-ico-o-{{i}}"><img src="{{asset('build/static/home/ecosystem/'~i~'.svg')}}" alt="{{i}}" class="img-fluid"/></div>
        {% endfor %}
      </div>

      <div class="d-inline-block align-middle ml-4 mb-5 my-md-3" id="gcw-periods-{{period}}">
      {% if period == "sale" %}
        {{ include ('frontend/default/partials/_homepage-1-3-sale.html.twig') }}
      {% elseif period == "presale" %}
        {{ include ('frontend/default/partials/_homepage-1-2-presale.html.twig') }}
      {% else %}
        {{ include ('frontend/default/partials/_homepage-1-1-nothing.html.twig', { 'form' : newsletterFormTop }) }}
      {% endif %}
      </div>



  </div>

</div>
