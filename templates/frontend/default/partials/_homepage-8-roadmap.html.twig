<section id="roadmap" class="screen py-5 text-center">
    <h2 class="text-center my-5 mx-auto primary-color d-inline-block">{{'roadmap_title' | trans }}</h2>

    <div id="roadmap-sheme">
      {% for i in range(1,3) %}
        <div id="roadmap-label-{{i}}" class="roadmap-label">{{ ('roadmap_label_'~i) | trans }}</div>
      {% endfor %}

      {% for i, date in ["Jan 2013", "Jan 2014","Jan 2015","Jan 2016","Jan 2017","Jan 2018","Jan 2020","May 2020","Jan 2021","Jan 2022","Jan 2024","Jan 2027"] %}
          <div id="roadmap-date-{{(i+1)}}" class="roadmap-date"> {{date}}</div>
      {% endfor %}


      {% for i in range(1,12) %}
        <div id="roadmap-step-{{i}}" class="roadmap-step">{{ ('roadmap_step_'~i) | trans }}</div>
      {% endfor %}
      <div id="roadmap-here">
        <div id="roadmap-here-pin"></div>
        <div id="roadmap-here-dot"></div>
        <div id="roadmap-here-txt">{{'roadmap_here' | trans}}</div>

      </div>



      {% for raw in range(1,3) %}
        <div class="road-h" id="road-h-{{raw}}"></div>
      {% endfor %}
      {% for col in range(1,3) %}
        <div class="road-v" id="road-v-{{col}}"></div>
        <div class="road-helix rotate-2s" id="road-helix-{{col}}"></div>
      {% endfor %}

      {% for dot in range(1,9) %}
          <div class="road-dot" id="road-dot-{{dot}}"></div>
      {% endfor %}
    </div>

</section>
