<div id="archi" class="screen py-5 row">

  <div class="col-12 col-md-5 text-center">
    <h2 class="text-center d-inline-block primary-color">{{'archi_title' | trans }}</h2>
    <p class="text-center my-5 secondary-color">{{'archi_p' | trans | raw }}</p>

    <div class="mx-auto my-5 p-3 gray-light-bg" id="fabric">
      <h3><img src="{{ asset('/build/static/home/archi/logo-fabric.svg') }}" alt="Fabric" height="59" width="59" /> {{'archi_fabric_title' | trans }}</h3>
      <p>{{'archi_fabric_p' | trans | raw }}</p>
    </div>
  </div>

  <div class="col-10 offset-1 offset-md-0 col-md-7">
      <div id="archi-scheme">



        <div id="archi-scheme-header">
            <div class="archi-scheme-left text-center d-inline-block">
              <div class="archi-col-1 ">
                <p>{{ ('bancor_network' | trans | replace({' ': '<br />' }) | raw ) }}</p>
                <img src="{{ asset('/build/static/home/archi/ARCHITECTURE-05.svg') }}"  height="55"/>
              </div>
              <div class="archi-col-2">
                <p>{{ ('gcw_tokens' | trans | replace({' ': '<br />' }) | raw ) }}</p>
                <img src="{{ asset('/build/static/home/archi/TOKEN_ARCHITECTURE.png') }}"  height="55"/>
              </div>
              <div class="archi-col-3">
                <p>{{ ('smart_contracts' | trans | replace({' ': '<br />' }) | raw ) }}</p>
                <img src="{{ asset('/build/static/home/archi/ARCHITECTURE-04.svg') }}"  height="55"/>
              </div>
            </div>
            <div class="archi-scheme-right pl-2">
                  <p class="my-auto py-3">{{'eth_infra' | trans }}</p>
            </div>
        </div>

        <div id="archi-scheme-body">

            <div class="archi-scheme-left">

                <div class="archi-blank" id="archi-blank-1">
                  {% for i in range (1, 4) %}
                    <div class="drop"></div>
                  {% endfor %}
                </div>

                <div class="archi-col-1 h-100  white-bg">
                      <p class="my-5">{{ ('talents_programs' | trans | replace({' ': '<br />' }) | raw ) }}<br /><br /><br />
                        <img src="{{ asset('/build/static/home/ecosystem/gocobooster.svg') }}" height="55" />
                      </p>
                      <p class="my-5">{{ ('distributed_corp' | trans | replace({' ': '<br />' }) | raw ) }}<br /><br /><br />
                        <img src="{{ asset('/build/static/home/ecosystem/gocoworker.svg') }}"  height="55"/>
                      </p>
                </div>

                <div class="archi-blank" id="archi-blank-2">
                  {% for i in range (1, 4) %}
                    <div class="drop"></div>
                  {% endfor %}
                </div>
                <div class="archi-blank" id="archi-blank-3">
                  {% for i in range (1, 4) %}
                    <div class="drop"></div>
                  {% endfor %}
                </div>

                <div class="archi-col-2 white-bg">

                    <p class="my-5">{{ ('communal_work' | trans | replace({' ': '<br />' }) | raw )}}<br /><br /><br />
                      <img src="{{ asset('/build/static/home/archi/ARCHITECTURE-10.svg') }}"  height="55"/>
                    </p>
                    <p class="my-5">{{ ('talents_activities' | trans | replace({' ': '<br />' }) | raw )}}<br /><br /><br />
                      <img src="{{ asset('/build/static/home/archi/ARCHITECTURE-09.svg') }}"  height="55"/>
                    </p>

                </div>

                <div class="archi-blank" id="archi-blank-4">
                  {% for i in range (1, 4) %}
                    <div class="drop"></div>
                  {% endfor %}
                </div>
                <div class="archi-blank" id="archi-blank-5">
                  {% for i in range (1, 4) %}
                    <div class="drop"></div>
                  {% endfor %}
                </div>

                <div class="archi-col-3 white-bg">

                    <p class="my-5">{{ ('talents_campus' | trans | replace({' ': '<br />' }) | raw ) }}<br /><br /><br />
                      <img src="{{ asset('/build/static/home/ecosystem/gococampus.svg') }}" height="55" />
                    </p>

                    <p class="my-5">{{ ('communal_companies' | trans | replace({' ': '<br />' }) | raw ) }}<br /><br /><br />
                      <img src="{{ asset('/build/static/home/ecosystem/gocompany.svg') }}" height="55" />
                    </p>

                </div>

                <div class="archi-blank" id="archi-blank-6">
                  {% for i in range (1, 4) %}
                    <div class="drop" id="drop-{{i}}"></div>
                  {% endfor %}
                </div>

            </div>


            <div class="archi-scheme-right pl-2 h-100">
              <div class="my-5 py-5">{{'collab_layer' | trans }}</div>
              <div class="my-5 py-5">{{'ecosystem_goverance' | trans }}</div>
            </div>
        </div>
        <div id="archi-scheme-footer">
            <div class="archi-scheme-left">
                <div class="archi-col-1 col-4 my-auto  p-3">
                  <div class="mx-3">
                    <p class="my-auto">{{ ('chaincodes_framework' | trans | replace({' ': '<br />' }) | raw ) }}</p>
                    <img src="{{ asset('/build/static/home/archi/ARCHITECTURE-03.svg') }}"  height="55"/>
                  </div>
                </div>

                <div class="archi-col-2 col-4 my-auto  p-3">
                  <div class="mx-3">
                    <p class="my-auto">{{ ('gcw_tokens' | trans | replace({' ': '<br />' }) | raw ) }}</p>
                    <img src="{{ asset('/build/static/home/archi/TOKEN_ARCHITECTURE.png') }}"  height="55"/>
                  </div>
                </div>

                <div class="archi-col-3 col-4 my-auto  p-3">
                  <div class="mx-3">
                    <p class="my-auto">{{ ('channels_network' | trans | replace({' ': '<br />' }) | raw ) }}</p>
                    <img src="{{ asset('/build/static/home/archi/ARCHITECTURE-02.svg') }}"  height="55"/>
                  </div>
                </div>

            </div>
            <div class="archi-scheme-right">
              <p class="my-auto py-3">{{'hyperledger_infra' | trans }}</p>
            </div>
        </div>
      </div>

  </div>

</div>
