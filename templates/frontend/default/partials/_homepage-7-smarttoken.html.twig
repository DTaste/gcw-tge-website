<div id="smart-token" class="screen py-5 text-center">
    <h2 class="text-center my-5 mx-auto primary-color d-inline-block">{{'smart_token_title' | trans }}</h2>
    <div class="row">
    {% for i in range(1,4) %}
      <div class="col-6 col-md-3 mb-5" id="sq-{{i}} text-center">

          <div id="st-anim-{{i}}" class="st-anim mx-auto mb-5 rounded-circle">
            <div class="z-1"></div>
            <div class="z-2"></div>
            <div class="z-3"></div>
            <div class="token"></div>
          </div>

          <h3 class="primary-color font-weight-bold">{{ ('smart_token_title_'~i) | trans | raw}}</h3>
          <p>{{ ('smart_token_p_'~i) | trans | raw }}</p>


      </div>
    {% endfor %}
  </div>

</div>
