<div id="about" class="screen py-5 text-center">
  <div id="about-left">
    <div id="helix-head" class="rotate-5s"></div>
    <div id="helix-foot"></div>
    <div class="gcw-ico gcw-ico-gocompany fadeIO gcw-ico-g1-0"></div>
    <div class="gcw-ico gcw-ico-gococampus fadeIO gcw-ico-g1-1"></div>
  </div>
  <div id="about-mid">
    <h2 class="text-center my-5 primary-color d-inline-block">{{'about_title' | trans }}</h2>
    <p class="text-center my-5 secondary-color">{{'about_p_1' | trans}}</p>
    <p class="text-center my-5 secondary-color">{{'about_p_2' | trans}}</p>
  </div>
  <div id="about-right">
    <div id="wheel" class="rotate-10s"></div>
    <div id="wheel-foots"></div>

    {% for c in range (1,8) %}
      <div id="wheel-cab-{{c}}" class="wheel-cab wheel-cab-pos{{(c-1)*2}}"></div>
    {% endfor %}

    <div class="gcw-ico gcw-ico-gocoworker fadeIO gcw-ico-g1-2"></div>
    <div class="gcw-ico gcw-ico-gocobooster fadeIO gcw-ico-g1-3"></div>
  </div>


</div>
